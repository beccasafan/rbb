---
layout: null
---
{
    "posts": [
        {% for post in site.posts %}
            {
                "title": "{{ post.title | raw |escape }}",
                "url": "{{ site.baseurl }}{{ post.url }}",
                "images": [
                    {% for img in post.images %}
                        "{{ img }}"{% unless forloop.last %},{% endunless %}
                    {% endfor %}
                ],
                "props": [
                    {% for prop in post.props %}
                        "{{ prop }}"{% unless forloop.last %},{% endunless %}
                    {% endfor %}
                ]
            }{% unless forloop.last %},{% endunless %}
        {% endfor %}
    ],
    "props": [
        {% for prop in site.allprops %}
            {
                {% assign propPath = "_props/" | append:prop | append:".markdown" %}
                {% assign foundUrl = site.props | where:"relative_path", propPath | map:"url" %}
                {% if foundUrl != empty %}
                    {% assign foundTitle = site.props | where:"relative_path", propPath | map:"title" %}
                    {% assign foundImages = site.props | where:"relative_path", propPath | map:"images" %}
                    "title": "{{ foundTitle | raw | escape }}",
                    "url": "{{ site.baseurl }}{{ foundUrl }}",
                    "images": [
                        {% for img in foundImages %}
                            "{{ img }}"{% unless forloop.last %},{% endunless %}
                        {% endfor %}
                    ]
                {% else %}
                    "title": "{{ prop }}",
                    "url": "{{ site.baseurl }}/props/{{ prop }}"
                {% endif %}
            }{% unless forloop.last %},{% endunless %}

        {% endfor %}
    ]
}